                { name: 'Shinhan Bank', details: 'IFSC Based Reports Testing', startDate: '', endDate: 'August 5, 2025', impact: 'High', effort: 'Medium', status: 'Completed' },
                { name: 'Digital Marketing', details: 'Proliferation Flyer Creation', startDate: 'August 6, 2025', endDate: 'August 7, 2025', impact: 'Medium', effort: 'Large', status: 'Completed' },
