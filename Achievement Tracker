                { name: 'HARCO', details: 'Front-end Testing', startDate: 'August 26, 2025', endDate: 'August 26, 2025', impact: 'Medium', effort: 'Small', status: 'Completed' },
                { name: 'HARCO DCCB', details: 'Release Note Testing', startDate: 'August 27, 2025', endDate: 'August 27, 2025', impact: 'Medium', effort: 'Medium', status: 'Completed' },
                { name: 'KANGRA', details: 'Release Note Testing', startDate: 'August 28, 2025', endDate: 'August 28, 2025', impact: 'High', effort: 'Medium', status: 'Completed' },
                { name: 'KANGRA', details: 'Release Note Testing', startDate: 'August 29, 2025', endDate: 'August 29, 2025', impact: 'High', effort: 'Medium', status: 'Completed' },
            ];
            
            // --- Helper function to format dates ---
            function formatDate(dateStr) {
                if (!dateStr) return 'N/A';
                return new Date(dateStr).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
            }
            
            // --- Helper function to create badges ---
            function createBadge(text, color) {
                const lightColorClasses = {
                    red: 'bg-red-100 text-red-800',
                    yellow: 'bg-yellow-100 text-yellow-800',
                    green: 'bg-green-100 text-green-800',
                    blue: 'bg-blue-100 text-blue-800',
                    purple: 'bg-purple-100 text-purple-800',
                };
                const darkColorClasses = {
                    red: 'dark:bg-red-600 dark:text-white',
                    yellow: 'dark:bg-yellow-500 dark:text-gray-900',
                    green: 'dark:bg-green-500 dark:text-white',
                    blue: 'dark:bg-blue-500 dark:text-white',
                    purple: 'dark:bg-purple-500 dark:text-white',
                };
                
                const lightClasses = lightColorClasses[color] || 'bg-slate-100 text-slate-800';
                const darkClasses = darkColorClasses[color] || 'dark:bg-slate-700 dark:text-slate-300';
                
                return `<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold ${lightClasses} ${darkClasses}">${text}</span>`;
            }
            
            // --- Populate the table ---
            const tableBody = document.querySelector('#projects table tbody');
            tableBody.innerHTML = ''; // Clear existing rows before populating
            projects.forEach(p => {
                const row = document.createElement('tr');
                row.className = 'bg-white dark:bg-transparent border-b border-slate-200 dark:border-slate-700 hover:bg-slate-50 dark:hover:bg-gray-700/50 transition-colors duration-200';
                
                const impactColor = { 'High': 'red', 'Medium': 'yellow', 'Low': 'green' }[p.impact];
                const effortColor = { 'Large': 'red', 'Medium': 'blue', 'Small': 'green' }[p.effort];
                const statusColor = { 'Completed': 'purple' }[p.status];
    
                let dateRange = formatDate(p.startDate);
                if(p.endDate) {
                     dateRange = `${formatDate(p.startDate)} - ${formatDate(p.endDate)}`;
                } else if (p.startDate) {
                    dateRange = `Started ${formatDate(p.startDate)}`;
                } else {
                    dateRange = "Ongoing";
                }
                
                row.innerHTML = `
                    <td class="px-6 py-4 font-semibold text-slate-900 dark:text-slate-200">${p.name}</td>
                    <td class="px-6 py-4 max-w-sm">${p.details}</td>
                    <td class="px-6 py-4 whitespace-nowrap">${dateRange}</td>
                    <td class="px-6 py-4">${createBadge(p.impact, impactColor)}</td>
                    <td class="px-6 py-4">${createBadge(p.effort, effortColor)}</td>
                    <td class="px-6 py-4">${createBadge(p.status, statusColor)}</td>
                `;
                tableBody.appendChild(row);
            });
    
            // --- Theme Toggle Logic ---
            const themeToggleBtn = document.getElementById('theme-toggle');
            const sunIcon = document.getElementById('theme-icon-sun');
            const moonIcon = document.getElementById('theme-icon-moon');
            const toast = document.getElementById('theme-toast');
            const closeToastBtn = document.getElementById('close-toast');
            let impactChart;
    
            function applyTheme(theme) {
                if (theme === 'dark') {
                    document.documentElement.classList.add('dark');
                    sunIcon.classList.add('hidden');
                    moonIcon.classList.remove('hidden');
                } else {
                    document.documentElement.classList.remove('dark');
                    sunIcon.classList.remove('hidden');
                    moonIcon.classList.add('hidden');
                }
                renderImpactChart();
            }
    
            themeToggleBtn.addEventListener('click', () => {
                const isDark = document.documentElement.classList.toggle('dark');
                localStorage.setItem('theme', isDark ? 'dark' : 'light');
                applyTheme(isDark ? 'dark' : 'light');
            });
    
            // Check for saved theme on load
            const savedTheme = localStorage.getItem('theme') || 'light'; // Default to light theme
            applyTheme(savedTheme);
    
            // Toast logic
            if (!localStorage.getItem('themeToastDismissed')) {
                setTimeout(() => {
                    toast.classList.remove('toast-hidden');
                }, 500);
                
                const dismissToast = () => {
                    toast.classList.add('toast-hidden');
                    localStorage.setItem('themeToastDismissed', 'true');
                }
                closeToastBtn.addEventListener('click', dismissToast);
                setTimeout(dismissToast, 6000); // Auto-dismiss after 6 seconds
            } else {
                toast.style.display = 'none';
            }
    
    
            // --- Pie Chart Logic ---
            function renderImpactChart() {
                if (impactChart) {
                    impactChart.destroy();
                }
    
                const impactCounts = projects.reduce((acc, project) => {
                    acc[project.impact] = (acc[project.impact] || 0) + 1;
                    return acc;
                }, {});
    
                const totalProjects = projects.length;
                const impactData = {
                    labels: ['Medium', 'High', 'Low'],
                    values: [
                        impactCounts['Medium'] || 0,
                        impactCounts['High'] || 0,
                        impactCounts['Low'] || 0
                    ]
                };
                
                const isDarkMode = document.documentElement.classList.contains('dark');
                
                const ctx = document.getElementById('impactChart').getContext('2d');
                impactChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: impactData.labels,
                        datasets: [{
                            label: 'Project Impact',
                            data: impactData.values,
                            backgroundColor: [
                                '#f59e0b', // amber-500 for Medium
                                '#ef4444', // red-500 for High
                                '#22c55e'  // green-500 for Low
                            ],
                            borderColor: isDarkMode ? '#1f2937' : '#ffffff', // gray-800 or white
                            borderWidth: 5,
                            hoverOffset: 10
                        }]
                    },
                    options: {
                        responsive: true,
                        cutout: '70%',
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    color: isDarkMode ? '#d1d5db' : '#475569', // gray-300 or slate-600
                                    padding: 25,
                                    boxWidth: 15,
                                    font: {
                                        size: 14,
                                        weight: '500'
                                    }
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        let label = context.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        if (context.parsed !== null) {
                                            const percentage = (context.parsed / totalProjects * 100).toFixed(1);
                                            label += `${context.raw} projects (${percentage}%)`;
                                        }
                                        return label;
                                    }
                                }
                            }
                        }
                    },
                    plugins: [{
                        id: 'centerText',
                        beforeDraw: function(chart) {
                            const { width, height, ctx } = chart;
                            ctx.restore();
                            
                            // Main number
                            const fontSize = (height / 100).toFixed(2);
                            ctx.font = `bold ${fontSize}em sans-serif`;
                            ctx.textBaseline = 'middle';
                            ctx.fillStyle = isDarkMode ? '#f9fafb' : '#1e293b'; // gray-50 or slate-800
    
                            const text = totalProjects.toString();
                            const textX = Math.round((width - ctx.measureText(text).width) / 2);
                            const textY = height / 2 - (height / 20);
                            ctx.fillText(text, textX, textY);
                            
                            // "Total" text
                            const subfontSize = (height / 220).toFixed(2);
                            ctx.font = `500 ${subfontSize}em sans-serif`;
                            ctx.fillStyle = isDarkMode ? '#9ca3af' : '#64748b'; // gray-400 or slate-500
                            const subtext = "Total";
                            const subtextX = Math.round((width - ctx.measureText(subtext).width) / 2);
                            const subtextY = height / 2 + (height / 15);
                            ctx.fillText(subtext, subtextX, subtextY);
                            
                            ctx.save();
                        }
                    }]
                });
            }
        });
    </script>
</body>
</html>

